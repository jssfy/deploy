# PostgreSQL 数据库配置
POSTGRES_DB=myapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=5432

# PgAdmin 配置
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

# 数据目录配置
POSTGRES_DATA_DIR=/home/data/postgres
PGADMIN_DATA_DIR=/home/data/pgadmin
BACKUP_DIR=/usr/data/backups

# 网络配置
ALLOW_REMOTE_ACCESS=true
POSTGRES_HOST=0.0.0.0
PGADMIN_HOST=0.0.0.0

# 备份配置
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点备份

# 日志配置
LOG_LEVEL=INFO
